mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`)
        .videoPlayer__controls
            .videoPlayer__column
                input.videoPlayer__runningtime#jsRunningTime(type="range", min="0", max="1000", step="0.1", value= "0")

            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play
                div.videoPlayer__volume-div
                    span#jsVolumeBtn
                        i.fas.fa-volume-up
                    span
                        input.videoPlayer__volume#jsVolume(type="range", min="0", max="1", step="0.1" value="0.5")
                div
                    span.videoPlayer__time
                        span#currentTime 00:00:00
                        span  / 
                        span#totalTime 00:00:00
            
            .videoPlayer__column
                //- span#jsExpend
                //-     i.fas.fa-expand-alt
                span#jsFullScreen
                    i.fas.fa-expand
