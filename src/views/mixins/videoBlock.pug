mixin videoBlock(video = {})
    .videoBlock
        a(href=routes.videoDetail(video.id))
            video.videoBlock__thumbnail(src=video.videoFile)
            h4.videoBlock__title=video.title
            if video.views === 1
                span.videoBlock__views 1 view
            else
                span.videoBlock__views #{video.views} views
            |  / 
            if Object.keys(video.comments).length === 1
                span.videoBlock__comments 1 comment
            else
                span.videoBlock__comments #{Object.keys(video.comments).length} comments
